{
    "manifest_version": 3,
    "name": "MarketLens",
    "description": "A clean and simple stock insight tool. Get real-time quotes and export data instantly.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
        
    },
    "web_accessible_resources": [
  {
    "resources": ["config.js"],
    "matches": ["<all_urls>"]
  }
],

    "permissions": 
    [
        "storage"
    ],
    "host_permissions":
    [
        "https://finnhub.io/*"
    ]
}