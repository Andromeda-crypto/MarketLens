{
  "manifest_version": 3,
  "name": "MarketLens",
  "description": "A clean and simple stock insight tool. Get real-time quotes and export data instantly.",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://finnhub.io/*"
  ]
}
